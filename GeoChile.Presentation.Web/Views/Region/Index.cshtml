@model IEnumerable<GeoChile.Presentation.Web.Models.RegionViewModel>
@{
    ViewData["Title"] = "Listado de Regiones";
}

<div class="container my-4">
    <h2 class="mb-4">Listado de Regiones</h2>

    <table class="table table-hover table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Nombre de la Región</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var region in Model)
            {
                <tr>
                    <td>@region.IdRegion</td>
                    <td>
                        @* Este enlace lleva al listado de comunas de la región seleccionada *@
                        <a asp-controller="Comunas" asp-action="Index" asp-route-id="@region.IdRegion">
                            @region.Nombre
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
