@model GeoChile.Presentation.Web.Models.ComunaViewModel
@{
    ViewData["Title"] = "Editar Comuna";
}

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4>Editar Comuna: @Model.Nombre</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Editar" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        @* Campos ocultos para enviar los IDs de vuelta al controlador *@
                        <input type="hidden" asp-for="IdComuna" />
                        <input type="hidden" asp-for="IdRegion" />

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="InformacionAdicional" class="form-label">Información Adicional (XML)</label>
                            <textarea asp-for="InformacionAdicional" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="InformacionAdicional" class="text-danger"></span>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                            <a asp-action="Index" asp-route-id="@Model.IdRegion" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>